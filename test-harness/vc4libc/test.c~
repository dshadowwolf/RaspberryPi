#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void main() {
  int z = 127;
  char *y = "127";
  int x = 0;

  /*
	  char n = *(fmt+1);
	  if(n >= '1' && n <= '9') {
	    //field width
	    fmt++;
	    int p = -1;
	    while(n >= '0' && n <= '9') {
	      fmt_width = fmt_width + ((n - '0') * __exp10(++p));
	      putc(n);
	      n = *(fmt++);
	    }
	    fmt--;
	  }
  */

  while(*y) {
    char n = *y, next = *(y+1);
    x += (n - '0');
    if(next >= '0' && next <= '9')
      x *= 10;
    y++;
  }

  printf("z == %u\ny == %s\nx == %u\n", z, y, x);
}
